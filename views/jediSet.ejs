<%- include('header') -%>
<html lang="en" style="background-color: #2b124e">
<head>
    <meta charset="UTF-8">
    <title>jediEdit</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="../css/common.css">
    <link rel="stylesheet" type="text/css" href="../css/head.css">
    <link rel="stylesheet" type="text/css" href="../css/edit.css">
</head>
<body>
<div class="wrapper bg3">
    <header>
        <h1>Fill the fields below</h1>
        <a href="/logout" id="logOut"></a>
    </header>
    <main>
        <div>
            <form class="w-75" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="Enter name"
                           value="<%= (typeof jedi === 'undefined') ? '' : jedi.name %>">
                </div>
                <div class="form-group">
                    <label for="age">Age</label>
                    <input type="number" min="1" class="form-control" id="age" name="age" placeholder="Enter age"
                           value="<%= (typeof jedi === 'undefined') ? '' : jedi.age %>">
                </div>
                <div class="form-group">
                    <label for="midichlorianCount">Midichlorian count</label>
                    <input type="number" min="7000" class="form-control" id="midichlorianCount" name="midichlorianCount" placeholder="Enter midichlorian count"
                           value="<%= (typeof jedi === 'undefined') ? '' : jedi.midichlorianCount %>">
                </div>
                <div class="submitBlock">
                    <a href="/jedi" class="btn btn-outline-light w-100" id="back">Back</a>
                    <input value="Save Jedi" type="submit" class="btn btn-outline-light" id="createNewItem">
                </div>
            </form>
        </div>
    </main>
    <footer>
        <p class="copyrightLeft">Copyright Â© 2021-present Patrik Santa</p>
        <p class="copyrightRight">All rights reserved.</p>
    </footer>
</div>
<%- include('footer') -%>